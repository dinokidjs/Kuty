@model IEnumerable<Web.Models.DOTHETHAO>


@foreach (var item in Model)
{
    if (@item.Loai == 1)
    {
        <div class="tab-pane fade active in" id="tshirt">
            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="~/Images/hinhsanpham/Áo/@item.Anhbia" alt="" />
                            <h2>@item.Giaban</h2>
                            <p>@item.Tendothethao</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đưa vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       }

}
            
